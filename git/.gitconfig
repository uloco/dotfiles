# This is Git's per-user configuration file.
[user]
    name = Umut TopuzoÄŸlu
    email = uloco@schiefewelt.de
[push]
    default = simple
[credential]
    helper = osxkeychain
[svn]
    rmdir = true
[core]
    editor = nvim
    ; pager = less -X -F
    pager = delta --features "$(defaults read -globalDomain AppleInterfaceStyle &> /dev/null && echo dark-mode || echo light-mode)"
[github]
    user = uloco
[ghi]
    token = !security find-internet-password -a uloco -s github.com -l 'ghi token' -w
[diff]
    tool = vimdiff
    colorMoved = default
[merge]
    tool = vimdiff
    conflictstyle = diff3
[difftool]
    prompt = false
[alias]
    f = fetch
    b = branch
    d = difftool
    s = status
    ss = status -s
    a = add
    aa = add .
    ba = branch --all
    co = checkout
    cob = checkout -b
    c = commit
    cm = commit -m
    cam = commit --amend -C HEAD
    cma = commit -am
    pu = "! git push -u origin $(git rev-parse --abbrev-ref HEAD)"
    put = pu --follow-tags
    puf = pu --force-with-lease
    r = reset
    rl = reset @^
    rls = reset @^ --soft
    g = log --graph --pretty=format:'%C(bold)%h%Creset%C(magenta)%d%Creset %s %C(yellow)<%an> %C(cyan)(%cr)%Creset' --abbrev-commit --date=relative
    gs = g --stat
    l = log
    ll = l --graph --pretty=oneline --abbrev-commit
    d = diff
    dc = d --cached
    pop = stash pop
    drop = stash drop
    delete = push --delete origin
    cleanup = "! git remote prune origin && git cleanup-branches"
    feature = "! git fetch && git checkout $(pbpaste)"
    reb = rebase
    rebs = rebase --skip
    rebc = rebase --continue
    rebd = "! git checkout develop && git pull && git checkout - && git rebase develop"
    cp = cherry-pick
    hash = "!git show --oneline | head -1 | awk '{ print $1 }' | pbcopy"
    t = tag
    find-merge = "!sh -c 'commit=$0 && branch=${1:-HEAD} && (git rev-list $commit..$branch --ancestry-path | cat -n; git rev-list $commit..$branch --first-parent | cat -n) | sort -k2 -s | uniq -f1 -d | sort -n | tail -1 | cut -f2'"
    show-merge = "!sh -c 'merge=$(git find-merge $0 $1) && [ -n \"$merge\" ] && git show $merge'"
    st = "stack"
    stp = "stack --pull"
    stpu = "stack --push"
[pager]
    branch = false
[pull]
    rebase = false
[filter "lfs"]
    required = true
    clean = git-lfs clean -- %f
    smudge = git-lfs smudge -- %f
    process = git-lfs filter-process
[rerere]
    enabled = 1
    autoupdate = true
[merge "npm-merge-driver"]
    name = automatically merge npm lockfiles
    driver = npx npm-merge-driver merge %A %O %B %P
[init]
    defaultBranch = main
[color]
    ui = auto

; delta
[interactive]
    diffFilter = delta --color-only
[add.interactive]
    useBuiltin = false # required for git 2.37.0

; tokyonight storm
[delta "dark-mode"]
    navigate = true    # use n and N to move between diff sections
    dark = true
    syntax-theme = base16
    plus-style = "#009FAD" "#223C4F"
    plus-emph-style = "#009FAD" "#205368"
    minus-style = "#C05967" "#422C3E"
    minus-emph-style = "#C05967" "#573346"
    hunk-header-decoration-style = blue box
    file-style = omit
    map-styles = \
      bold purple => "#009FAD" "#223C4F", \
      bold cyan => "#C05967" "#422C3E", \
      bold blue => "#009FAD" "#223C4F", \
      bold yellow => "#C05967" "#422C3E",

; tokyonight day
[delta "light-mode"]
    navigate = true    # use n and N to move between diff sections
    light = true
    syntax-theme = GitHub
    plus-style = "#008894" "#B4D4E9"
    plus-emph-style = "#008894" "#94C7E9"
    minus-style = "#CE6775" "#E3CBD4"
    minus-emph-style = "#CE6775" "#E3ADC3"
    hunk-header-decoration-style = blue box
    file-style = omit
    map-styles = \
       bold purple => "#008894" "#B4D4E9", \
       bold cyan => "#CE6775" "#E3CBD4",  \
       bold blue => "#008894" "#B4D4E9", \
       bold yellow => "#CE6775" "#E3CBD4", 

[delta "interactive"]
    keep-plus-minus-markers = false

